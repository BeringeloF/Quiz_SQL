extends base


block content
 main
  section.user-details
    form.user-info(enctype="multipart/form-data")
        h2= user.name
        img.profile-picture-large(src=`/img/${user.photo}`, alt="Profile Picture")
        .form-group
          label(for="image") New profile photo
          input#image(type="file" name="photo"  accept='image/*')
          button.new-photo-btn(style='margin-top: 12px;') Change photo
    .quiz-history
        h3 Quiz History
        ul.quiz-list
          if history.length > 0
              each quizHistory in history
                li.quiz-item #{quizHistory.name} - Score: #{quizHistory.correct_answers}/#{quizHistory.total_questions}
                  span.date=  new Date(quizHistory.completed_at).toLocaleDateString()
           
    .change-password
        a.change-password-link(href="/changePassword") Change Password
